{{#if isLoggedIn}}
<div class="shoes">
    {{#if shoes}}
    {{#each shoes}}
    {{> shoe}}
    {{/each}}
    {{else}}
    <h1>No shoes to display. Be the first to create a new offer...</h1>
    {{/if}}
</div>
{{else}}
<div class="container">
    <div class="about-us">
        <div>
            <img src="/shoes.jpg" alt="">
            <img src="/shoes2.jpg" alt="">
        </div>
        <p>
            <a href="/register">Register Now</a> and Try it!
        </p>
    </div>
</div>
{{/if}}
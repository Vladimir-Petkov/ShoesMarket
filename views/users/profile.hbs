<div class="user-info">
    <div>
        <p>Email: <span>{{email}}</span></p> |
        <p>My offers: <span>[{{shoesLength}}]</span></p> |
        <p><a href="/logout">Logout</a></p>
    </div>
    <div class="shoes">
        {{#if shoes}}
        {{#each shoes}}
        {{> shoe}}
        {{/each}}
        {{else}}
        <h1>No shoes to display.</h1>
        {{/if}}
    </div>
    <p class="total-profit">Total profit: <span>${{total}}</span></p>
</div>